<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Schedule Planner</title>

    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <link rel="stylesheet" href="/stylesheets/stuffStyle.css">
    
</head>
<body>
    <!-- Nav bar -->
    <header>
        <nav>
            <div class="nav-wrapper">
                <a href="/" class="brand-logo">Schedule Planner</a>
                <a href="#" data-target="mobile-nav" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <ul id="desktop-nav" class="right hide-on-med-and-down">
                    <li><a href="/"><i class="material-icons left">home</i>Home</a></li>
                    <li><a href="/tasks"><i class="material-icons left">list</i>Planner</a></li>
                    <% if (isLoggedIn) { %>
                        <li><a href="/profile"><i class="material-icons left">person</i> Hello, <%=user.name%></a> </li>
                        <li><a href="/logout" class="btn red">Logout</a></li>                        
                    <% } else { %>
                        <li><a href="/login" class="btn blue">Login</a></li>
                    <% } %>
                </ul>
            </div>
        </nav>
        <ul id="mobile-nav" class="sidenav">
             <li><a href="/"><i class="material-icons left">home</i>Home</a></li>
             <li><a href="/tasks"><i class="material-icons left">list</i>Planner</a></li>
             <% if (isLoggedIn) { %>
                <li><a href="/profile"><i class="material-icons left">person</i> Hello, <%=user.name%></a> </li>
                <li><a href="/logout" class="btn red">Logout</a></li>                        
            <% } else { %>
                <li><a href="/login" class="btn blue">Login</a></li>
            <% } %>
        </ul>
    </header>

    <!-- rest of the body -->
    <div class="container">
        <div class="section" id="taskList">
            <h1>Your schedule:</h1>
            <table class="responsive-table">
                <thead>
                    <tr>
                        <th>Task Name</th>
                        <th>Description</th>
                        <th>Time</th>
                        <th>Location</th>
                        <th></th>
                    </tr>
                </thead>
            
                <tbody>
                    <% for (let i = 0; i < inventory.length; i++) { %> 
                    <tr>
                        <td><%= inventory[i].taskName %></td>
                        <td><%= inventory[i].description %></td>
                        <td><%= inventory[i].time %></td>
                        <td><%= inventory[i].location %></td>
                        <td>
                            <a class="btn-small waves-effect waves-light" href=<%= "/tasks/detail/" + inventory[i].id %> >
                                <i class="material-icons right">edit</i>Info/Edit</a>
                            <a class="btn-small waves-effect waves-light red" onclick="M.toast({html: 'Task deleted!'})" href="/tasks/detail/<%= inventory[i].id %>/delete">
                                <i class="material-icons right">delete</i>Delete</a>
                        </td>    
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <div class="section" id="addTasks">
            <h3>Add a task:</h3>
            <form method="post" action="/tasks">
                <div class="row">
                            
                    <div class="input-field col s6">
                        <label for="task_name">Task Name</label>
                        <input type="text" name="taskName" id="taskNameInput" class="validate" data-length="32" required>
                    </div>
                    <div class="input-field col s6">
                        <label for="desc">Description</label>
                        <input type="text" name="description" id="descriptionInput" placeholder="Enter your description here" class="validate" data-length="32" required>
                    </div>
                </div>    
                
                <div class="row">
                    <div class="input-field col s6">
                        Time:
                        <div class="input-field inline">
                            <input type="text" name="time" id="timeInput" class="validate" data-length="32">
                        </div>
                    </div>
                </div>
                <div class="row">    
                    <div class="input-field col s6">
                        Location: 
                        <div class="input-field inline">
                            <input type="text" name="location" id="locationInput" placeholder="New York City" class="validate" data-length="32">
                        </div>
                    </div>    
                </div>
                <button class="btn waves-effect waves-light" type="submit" onclick="M.toast({html: 'Task added!'})">
                    <i class="material-icons right">done</i>
                    Submit
                </button>
            </form>
        </div>

        <br><br>
        <a class="waves-effect waves-light btn-large" href="/" title="Go back!">
            Homepage
            <i class="material-icons right">home</i>
        </a>
    </div>
    <script src="/javascripts/materialize_autoinit.js"></script>
</body>
</html>